package br.senai.sp.informatica.cadastro.model;

import javax.persistence.Column;
import javax.persistence.Entity;
import javax.persistence.Id;
import javax.persistence.Table;
import javax.persistence.Transient;
import javax.validation.constraints.Size;

import br.senai.sp.informatica.cadastro.model.validacao.Senha;
import lombok.AllArgsConstructor;
import lombok.Data;
import lombok.NoArgsConstructor;

@Data
@NoArgsConstructor
@AllArgsConstructor
@Entity
@Table(name="users")
public class Usuario {
	@Id
	@Column(name="username")
	@Size(min=5, max=15, message="O nome deve ter no mínimo 3 e no máximo 15 caracteres")
	private String nome;
	@Transient
	private String old_nome = "";
	@Senha(message="A senha não tem a complexidade exigida")
	@Column(name="password")
	private String senha;
	@Column(name="enabled")
	private boolean habilitado = true;
	@Transient
	private boolean administrador;
	@Transient
	private boolean editar;
}
